# HostEasePro API Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to git - add it to .gitignore

# Server Configuration
PORT=3000
NODE_ENV=development

# Booking.com API Credentials
# Get these from your Booking.com Extranet account
BOOKING_COM_USERNAME=your_extranet_username
BOOKING_COM_PASSWORD=your_extranet_password

# Booking.com Property IDs
# These are your hotel/property IDs from Booking.com
BOOKING_SPERANTA_ID=your_speranta_property_id
BOOKING_TVHOUSE_ID=your_tvhouse_property_id

# Airbnb API Credentials (Partner API required)
# Apply at: https://www.airbnb.com/partner
AIRBNB_CLIENT_ID=your_airbnb_client_id
AIRBNB_CLIENT_SECRET=your_airbnb_client_secret
AIRBNB_ACCESS_TOKEN=your_airbnb_access_token

# Airbnb Property IDs
AIRBNB_SPERANTA_ID=your_speranta_listing_id
AIRBNB_TVHOUSE_ID=your_tvhouse_listing_id

# LekkeSlaap API (Contact LekkeSlaap for details)
LEKKESLAAP_API_KEY=your_lekkeslaap_api_key
LEKKESLAAP_SPERANTA_ID=your_speranta_property_id
LEKKESLAAP_TVHOUSE_ID=your_tvhouse_property_id

# FeWo-direkt / Vrbo (Expedia Partner Solutions)
FEWO_PARTNER_ID=your_expedia_partner_id
FEWO_API_KEY=your_fewo_api_key

# Security Settings
JWT_SECRET=your_jwt_secret_for_authentication
API_RATE_LIMIT=100  # requests per minute

# Database (optional - for caching API responses)
# DATABASE_URL=your_database_connection_string

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,file://

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api-server.log
\n# Supabase (Next.js public + server-role)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_PUBLIC_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY   # DO NOT expose this in browser

# Frontend environment indicator
NEXT_PUBLIC_ENV=development
